<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/nav_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#635a5a"
        android:orientation="horizontal"
        android:weightSum="4">

        <TextView
            android:id="@+id/pizzaBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/pizza"
            android:gravity="center"
            android:text="Pizza"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/kebabBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/kebab"
            android:gravity="center"
            android:text="Kebab"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/saladBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/salad"
            android:gravity="center"
            android:text="Salad"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/otherBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/other"
            android:gravity="center"
            android:text="Other"
            android:textColor="#fff" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/nav_menu">

    </FrameLayout>
</RelativeLayout>