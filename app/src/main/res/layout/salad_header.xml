<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#efeded"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/HeaderName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.7"
            android:gravity="center_vertical"
            android:text="Salad"
            android:textColor="#ff000d"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/HeaderPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:gravity="center_vertical"
            android:text="75:-"
            android:textColor="#ff000d"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/headerSortText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Accessories: Iceberg lettuce, tomato, red onion, fefferoni,(except pizza orders).Sauce: kebab sauce, beanrnaise sauce, garlic dressing."
        android:textSize="20sp"
        android:textStyle="italic" />
</LinearLayout>